<div class="container">
<h1 class="mt-4 mb-4 fw-bold">Address Form</h1>
<%= form_with scope: :address, url: addresses_path, local: true do |form| %>
    <div class="form-group">
        <strong><%= form.label :address_line_1 %></strong>
        <%= form.text_area :address_line_1, class: 'form-control' %>
    </div>

    <div class="form-group">
        <strong><%= form.label :address_line_2%></strong>
        <%= form.text_area :address_line_2, class: 'form-control'%>
    </div>

    <div class="form-group">
    <strong><%= form.label :state%></strong><br>
     <%= form.select :state, ["Andhra Pradesh", "Hyderabad", "uttar pradesh", "Maharastra", "Delhi", "Punjab"], class: 'form-control' %>
    </div>
    
    <div class="form-group">
    <strong><%= form.label :city %></strong><br>
     <%= form.select :city, ["Amalapuram", "West Godvari", "East Godavari", "Tirupati", "Vijayawada", "Kphb", "prargathi nagar"], class: 'form-control' %>
    </div>

    <div class="form-group">
        <strong><%= form.label :zip %></strong>
        <%= form.number_field :zip, class: 'form-control' %>
    </div>


    <div class="form-group">
        <%= form.submit class:"form-control btn-primary btn-block fa-lg gradient-custom-2 mb-3" %>
    </div>

    <div>
        <a href="/shopping">Shopping page</a> 
    </div>
      <% end %>
</div>

