<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">

<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
  <h6 class="fw-bold">shopping website</h6>
  <form class="d-flex">
     <a href="/lineitem"><i class="bi bi-cart3" style="font-size: 2rem;"> <%=LineItem.count %></i></a>
    <a class="nav-link" href="/logout">Logout</a>
   </form>
   </div>
</nav>

<h2>All Products</h2>
<div class="grid">

<div>
    <%= flash[:notice] if flash[:notice]%>
</div>

<% @products.each do |product| %>
        <div>
        <strong>Name:</strong><%= product.name %>
        </div>

        <div>
        <%= image_tag(product.image.url, style: 'height:250px;width:auto;')%> 
        </div>

        <div>
        <strong>price:</strong><%= product.price%>
        </div>

        <div>
        <strong>quantity:</strong><%= product.quantity%>
        </div>
        <%= link_to 'add_to_cart', "add_to_cart/#{product.id}" %>
    <%end%>
</div>
