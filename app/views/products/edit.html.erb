<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<div class="content">
    <div class="container-fluid">
        <div class="container">
      <div class="row justify-content-center">
        <h4 class="mt-4 mb-4 display-4">New Product</h4>
      </div>

      <div class="row justify-content-center">
        <div class="row">
          <div>
          <%= form_for @product do |form| %>
              <div class="form-group">
                <%= form.label :name %>
                  <%= form.text_field :name, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.label :image_url%>
                  <%= form.file_field :image_url, class: 'form-control'%>
               </div>

                <div class="form-group">
                   <%= form.label :price %>
                   <%= form.number_field :price, class: 'form-control' %>
              </div>
              
              <div class="form-group">
                <%= form.label :quantity %>
                  <%= form.text_field :quantity, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.submit class:"form-control btn-primary btn-block fa-lg gradient-custom-2 mb-3" %>
              </div>

              <div>
               <a href="/">home page</a> 
              </div>
            <% end %>
      </div>
    </div>
</div>


