<div class="container">
<h1 class="mt-4 mb-4 fw-bold">New Product</h1>
<%= form_with scope: :product, url: products_path, local: true do |form| %>
    <div class="form-group">
        <strong><%= form.label :name %></strong>
        <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <strong><%= form.label :image%></strong>
        <%= form.file_field :image, class: 'form-control'%>
    </div>

    <div class="form-group">
        <strong><%= form.label :price %></strong>
        <%= form.number_field :price, class: 'form-control' %>
    </div>
      
    <div class="form-group">
        <strong><%= form.label :quantity %></strong>
        <%= form.text_field :quantity, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.submit class:"form-control btn-primary btn-block fa-lg gradient-custom-2 mb-3" %>
    </div>

    <div>
        <a href="/products">products page</a> 
    </div>
      <% end %>
</div>

